pkgdesc='Background daemon for F&Home'
url='https://github.com/bartekpacia/fhome'
arch=('aarch64' 'x86_64')
license=('MIT')
provides=('fhome')
conflicts=('fhome')

source_aarch64=("${pkgname}_${pkgver}_aarch64.tar.gz::https://github.com/bartekpacia/fhome/releases/download/v0.3.4/fhomed_0.3.4_linux_arm64.tar.gz")
